@model List<Book>
@{
    ViewData["Title"] = "Ürün Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ürün Yönetimi</h1>
        <a href="/Admin/Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Kitap Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Resim</th>
                    <th>Başlık</th>
                    <th>Yazar</th>
                    <th>Kategori</th>
                    <th>Fiyat</th>
                    <th>Stok</th>
                    <th>Satış</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(book.ImageURL))
                            {
                                <img src="@book.ImageURL" alt="Kitap" style="width: 50px; height: 75px; object-fit: cover;">
                            }
                            else
                            {
                                <span class="text-muted">Resim Yok</span>
                            }
                        </td>
                        <td>@book.Title</td>
                        <td>@book.AuthorName</td>
                        <td>@book.CategoryName</td>
                        <td>@book.Price.ToString("C")</td>
                        <td>
                            <span class="badge @(book.StockQuantity < 10 ? "bg-danger" : "bg-success")">
                                @book.StockQuantity
                            </span>
                        </td>
                        <td>0</td> <!-- Satış sayısı query'den gelmiyor olabilir fix needed in GetAllBooks if critical -->
                        <td>
                            <div class="btn-group">
                                <a href="/Admin/Edit/@book.BookID" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form action="/Admin/Delete/@book.BookID" method="post" onsubmit="return confirm('Bu kitabı silmek istediğinize emin misiniz?');" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
