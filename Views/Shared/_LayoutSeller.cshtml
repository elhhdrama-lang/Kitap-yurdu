<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kitapyurdu Satıcı Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        .sidebar {
            height: 100vh;
            width: 260px;
            position: fixed;
            top: 0;
            left: 0;
            background: linear-gradient(180deg, #1f2937 0%, #111827 100%);
            color: #fff;
            padding-top: 20px;
            z-index: 1000;
        }
        .sidebar a {
            padding: 12px 25px;
            text-decoration: none;
            font-size: 1rem;
            color: #9ca3af;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: 0.2s;
            border-left: 3px solid transparent;
        }
        .sidebar a:hover, .sidebar a.active {
            color: #fff;
            background-color: rgba(255,255,255,0.05);
            border-left-color: var(--primary-color);
        }
        .sidebar .brand {
            font-size: 1.25rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .main-content {
            margin-left: 260px;
            padding: 30px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="brand">
            <i class="bi bi-shop text-warning"></i> Satıcı Paneli
        </div>
        <a href="/Seller/Dashboard"><i class="bi bi-speedometer2"></i> Gösterge Paneli</a>
        <a href="/Seller/MyProducts"><i class="bi bi-box-seam"></i> Ürünlerim</a>
        <a href="/Seller/AddProduct"><i class="bi bi-plus-circle"></i> Ürün Ekle</a>
        <div class="mt-auto pt-4 border-top border-secondary mx-3"></div>
        <a href="/Seller/Logout" class="text-danger mt-2"><i class="bi bi-box-arrow-right"></i> Çıkış Yap</a>
    </div>

    <div class="main-content">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-3" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (ViewBag.Error != null || TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @(ViewBag.Error ?? TempData["Error"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <div class="bg-white p-4 rounded-4 shadow-sm border-0">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
