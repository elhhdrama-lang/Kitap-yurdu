@{
    ViewData["Title"] = "Gösterge Paneli";
    Layout = "~/Views/Shared/_LayoutSeller.cshtml";
}

<div class="container-fluid">
    <h1 class="mb-4">Hoş Geldiniz, @Context.Session.GetString("SellerUsername")</h1>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Ürünlerim</h5>
                    <p class="card-text display-6">Yönet</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/Seller/MyProducts">Detaylar</a>
                    <div class="small text-white"><i class="bi bi-chevron-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <h5 class="card-title">Yeni Ürün Ekle</h5>
                    <p class="card-text display-6">+</p>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/Seller/AddProduct">Ekle</a>
                    <div class="small text-white"><i class="bi bi-chevron-right"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>
